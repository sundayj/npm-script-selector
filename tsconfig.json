{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "target": "ES2022",
    "module": "Node16",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "jasmine", "node"
    ],
    "baseUrl": "./",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": [
    "*.ts", "*.js"
  ]
}
